{
  "name": "cycles-mcp",
  "version": "0.1.0",
  "description": "MCP server for managing development cycles, tasks, and git workflow",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "cycles-mcp": "dist/index.js"
  },
  "scripts": {
    "prebuild": "rm -rf dist",
    "build": "bun build src/index.ts --outdir dist --target node && cp -r src/templates dist/",
    "dev": "bun run src/index.ts",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist node_modules"
  },
  "keywords": [
    "mcp",
    "cycles",
    "workflow",
    "git",
    "task-management"
  ],
  "author": "Brenden",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0"
  }
}
