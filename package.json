{
  "name": "cycles-mcp",
  "version": "1.0.0",
  "description": "MCP server for managing development cycles, tasks, and git workflow",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "cycles-mcp": "dist/index.js"
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/btbishop93/cycles-mcp.git"
  },
  "homepage": "https://github.com/btbishop93/cycles-mcp#readme",
  "bugs": {
    "url": "https://github.com/btbishop93/cycles-mcp/issues"
  },
  "scripts": {
    "prebuild": "rm -rf dist",
    "build": "bun build src/index.ts --outdir dist --target node",
    "dev": "bun run src/index.ts",
    "type-check": "tsc --noEmit",
    "lint": "biome check src/",
    "lint:fix": "biome check --write src/",
    "format": "biome format --write src/",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "clean": "rm -rf dist node_modules",
    "prepare": "husky"
  },
  "keywords": [
    "mcp",
    "cycles",
    "workflow",
    "git",
    "task-management"
  ],
  "author": "Brenden",
  "license": "MIT",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.1",
    "zod": "^4.3.5"
  },
  "lint-staged": {
    "*.ts": [
      "biome check --write"
    ]
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^12.0.2",
    "@semantic-release/npm": "^13.1.3",
    "@semantic-release/release-notes-generator": "^14.1.0",
    "@types/node": "^25.0.3",
    "@vitest/coverage-v8": "^4.0.16",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "semantic-release": "^25.0.2",
    "typescript": "^5.3.0",
    "vitest": "^4.0.16"
  }
}
